<div  width="100%" style="margin: 50px; color: white;">
<h1 class="text-center"><u><b>Player Stats</b></u></h1>
  <table id="stat_table" class="table table-bordered">
    <thead>
      <tr>
        <th>Year</th>
        <th>Name</th>
        <th>Runs</th>
        <th>Home Runs</th>
        <th>Average (AVG)</th>
        <th>Run Batted In (RBI)</th>
        <th>Stolen Base (SB)</th>
        <th>On-base Plus Slugging (OPS)</th>
      </tr>
    </thead>
    <tbody style="background-color: grey;">
      <% @players.each do |player| %>
      <tr>
        <td><%= player.year %></td>
        <td><%= player.display_name %></td>
        <td><%= player.runs %></td>
        <td><%= player.home_runs %></td>
        <td><%= player.average %></td>
        <td><%= player.rbi %></td>
        <td><%= player.steals %></td>
        <td><%= player.ops %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
